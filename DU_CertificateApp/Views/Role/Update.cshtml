@using DU_CertificateApp.Models;
@model RoleViewModel
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Update</h1>

<div class="box box-primary">
    <div class="box-header with-border">
        <h2 class="text-center">Update Role</h2><hr />
    </div>
    <!-- /.box-header -->
    <!-- form start -->
    <div class="row">
        <div class="col-md-8">
            <form method="post" asp-controller="Role" asp-action="Update">
                <div class="box-body">
                    <div class="form-group">
                        <label asp-for="Name">Name</label>
                        <input type="text" class="form-control col-md-5" asp-for="Name" required="required" placeholder="Enter Role Name"><br>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="checkbox">
                        <label>
                            <input type="checkbox" asp-for="Status"> Status
                        </label>
                    </div>
                    <!-- form End -->
                </div>
                <!-- /.box-body -->
                <div class="box-footer">
                    <button type="submit" class="btn btn-success">Update</button>
                    <a asp-controller="Role" asp-action="Index" class="btn btn-primary">Back to List</a>
                    <span class="text-danger">@ViewBag.ErrorMessage</span>
                </div>
            </form>
        </div>
    </div>
</div>