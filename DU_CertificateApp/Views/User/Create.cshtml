@using DU_CertificateApp.Models;
@model UserViewModel;
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="box box-primary">
    <div class="box-header with-border">
        <h2 class="text-center">Add User</h2><hr />
    </div>
    <!-- /.box-header -->
    <!-- form start -->
    <div class="row">
        <div class="col-md-8">
            <form method="post" asp-controller="User" asp-action="Create">
                <div class="box-body">
                    <div class="form-group">
                        <label asp-for="Name">Name</label>
                        <input type="text" class="form-control col-md-5" asp-for="Name" required="required" placeholder="Enter Name"><br>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UserName">UserName</label>
                        <input type="text" class="form-control col-md-5" asp-for="UserName" required="required" placeholder="Enter UserID"><br>
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="RoleID">Role</label>
                        <select class="form-control col-md-3" asp-for="RoleID">
                            <option value="">Choose Role</option>
                            @foreach (RoleViewModel item in ViewBag.Roles)
                            {
                                <option value="@item.ID">@item.Name</option>
                            }
                        </select>
                        <span asp-validation-for="RoleID" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Email">Email</label>
                        <input type="text" class="form-control col-md-5" asp-for="Email" required="required" placeholder="Enter Email"><br>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Phone">Phone</label>
                        <input type="text" class="form-control col-md-5" asp-for="Phone" required="required" placeholder="Enter Phone"><br>
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Password">Password</label>
                        <input type="text" class="form-control col-md-5" asp-for="Password" required="required" placeholder="Enter Password"><br>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ConfirmPassword">ConfirmPassword</label>
                        <input type="text" class="form-control col-md-5" asp-for="ConfirmPassword" required="required" placeholder="Confirm Password"><br>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="checkbox">
                        <label>
                            <input type="checkbox" asp-for="Status"> Status
                        </label>
                    </div>
                    <!-- form End -->
                </div>
                <!-- /.box-body -->
                <div class="box-footer">
                    <button type="submit" class="btn btn-success">Create</button>
                    <a asp-controller="User" asp-action="Index" class="btn btn-primary">Back to List</a>
                    <span class="text-danger">@ViewBag.ErrorMessage</span>
                </div>
            </form>
        </div>
    </div>
</div>
