@using DU_CertificateApp.Models;
@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "UserList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>User</h1>
<hr />
<a asp-action="Create" class="btn btn-outline-success">Create</a>
<br />
<br />

<div>
    <table id="example" class="table table-striped nowrap" style="width:100%">
        <thead>
            <tr>
                <th>Name</th>
                <th>UserName</th>
                <th>Role</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (UserViewModel item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.UserName</td>
                    @foreach (RoleViewModel item2 in ViewBag.Roles)
                    {
                        if (item2.ID == item.RoleID)
                        {
                            <td>@item2.Name</td>
                            break;
                        }
                    }
                    <td>@item.Email</td>
                    <td>@item.Phone</td>
                    <td>@item.Status</td>
                    <td>
                        <a asp-controller="User" asp-action="Update" asp-route-id="@item.ID" class="btn btn-outline-warning text-black"><i class="fa fa-pencil"></i> Update</a> |
                        <a asp-controller="User" asp-action="Remove" asp-route-id="@item.ID" class="btn btn-outline-danger" onclick="return confirm('Are you Sure?')"><i class="fa fa-trash-o" aria-hidden="true"></i> Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

